<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#FF9800"
    tools:context=".MainActivity">
    <TextView
        android:background="#FFE0B2"
        android:layout_marginTop="20dp"
        android:textSize="40dp"
        android:id="@+id/res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:background="#FFE0B2"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:id="@+id/build"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:textSize="15dp"
            android:text="1"
            android:id="@+id/n1"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:textSize="15dp"
            android:text="2"
            android:id="@+id/n2"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:textSize="15dp"
            android:text="3"
            android:id="@+id/n3"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button

            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:textSize="15dp"
            android:text="+"
            android:id="@+id/sum"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="4"
            android:id="@+id/n4"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="5"
            android:id="@+id/n5"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="6"
            android:id="@+id/n6"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>

        <Button

            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="clear"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="7"
            android:id="@+id/n7"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="8"
            android:id="@+id/n8"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="9"
            android:id="@+id/n9"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>

        <Button

            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:id="@+id/sub"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:text="-"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="*"
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="0"
            android:id="@+id/n0"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#E65100"
            android:text="/"
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
        <Button
            android:background="#E65100"
            android:textSize="15dp"
            android:text="="
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"/>
    </LinearLayout>

</LinearLayout>